generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── 구독 등급 ───
enum SubscriptionTier {
  FREE
  PRO
}

// ─── 결제 관련 Enums ───
enum PaymentProvider {
  STRIPE
  PORTONE // Phase 7에서 활성화
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  SUSPENDED
  PAUSED
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
}

// ─── 사용자 (인증 주체) ───
model User {
  id                     String    @id @default(cuid())
  email                  String    @unique
  passwordHash           String?
  name                   String?
  emailVerified          Boolean   @default(false)
  emailVerifyToken       String?
  emailVerifyTokenExpiry DateTime?
  passwordResetToken     String?
  passwordResetExpiry    DateTime?

  // OAuth (Week 9에서 활성화)
  oauthProvider   String?
  oauthProviderId String?

  // 구독
  subscriptionTier    SubscriptionTier @default(FREE)
  subscriptionId      String?
  stripeCustomerId    String?          @unique
  monthlySessionCount Int              @default(0)

  // 관계
  profile      UserProfile?
  sessions     InterviewSession[]
  usageLogs    AIUsageLog[]
  subscription Subscription?
  betaFeedback BetaFeedback[]

  emailNotifications Boolean @default(true)

  // 감사
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime?
  isActive    Boolean   @default(true)
  isAdmin     Boolean   @default(false)
  signupSource         String?   // UTM 파라미터 / 유입 경로
  referralCode         String?   @unique // 레퍼럴 코드
  referredByUserId     String?   // 추천인
  onboardingCompletedAt DateTime? // 온보딩 완료 시점
  aiDataConsent        Boolean   @default(false) // AI 데이터 활용 동의
  jobFunction          String    @default("developer") // 직무 구분 (developer, pm, designer, etc.)
  deletedAt   DateTime?

  @@unique([oauthProvider, oauthProviderId])
  @@index([jobFunction])
  @@index([subscriptionTier])
  @@index([lastLoginAt])
  @@index([createdAt])
}

// ─── 사용자 기본 프로필 (하나만 존재) ───
model UserProfile {
  id     String  @id @default(cuid())
  userId String? @unique // User와 1:1 (nullable during migration)
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 기본 정보
  name           String // 이름
  email          String? // 이메일 (선택)
  totalYearsExp  Int // 총 경력 연차
  currentRole    String // 현재 직무 (e.g., "백엔드 개발자")
  currentCompany String? // 현재 회사명

  // 자기소개 & 이력
  selfIntroduction String? // 자기소개서 텍스트
  resumeText       String? // 이력서 텍스트 (자유 형식)
  photoUrl         String? // 이력서용 프로필 사진 URL
  strengths        String[] // 본인이 생각하는 강점
  weaknesses       String[] // 본인이 생각하는 약점

  // 관계
  skills             UserSkill[] // 기술 스택 (숙련도 포함)
  experiences        WorkExperience[] // 경력 사항
  targetPositions    TargetPosition[] // 지원 회사/포지션
  resumeEdits        ResumeEdit[] // 이력서 첨삭 결과
  resumeDocuments    ResumeDocument[] // 생성된 이력서 문서
  portfolioProjects  PortfolioProject[] // 포트폴리오 프로젝트
  portfolioGuides    PortfolioGuide[] // 포트폴리오 가이드

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ─── 기술 스택 (숙련도 포함) ───
model UserSkill {
  id          String      @id @default(cuid())
  profileId   String
  profile     UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  name        String // 기술명 (e.g., "Java", "Spring Boot", "Kubernetes")
  category    String // 카테고리 (language / framework / database / infra / etc.)
  proficiency Int // 숙련도 1-5 (1: 입문, 3: 중급, 5: 전문가)
  yearsUsed   Int? // 사용 연차
  createdAt   DateTime    @default(now())

  @@unique([profileId, name])
  @@index([profileId, category])
}

// ─── 경력 사항 ───
model WorkExperience {
  id           String      @id @default(cuid())
  profileId    String
  profile      UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  company      String // 회사명
  role         String // 직무/직책
  startDate    DateTime // 시작일
  endDate      DateTime? // 종료일 (null = 재직중)
  description  String? // 업무 설명
  techStack    String[] // 사용 기술
  achievements String[] // 주요 성과
  orderIndex   Int // 표시 순서
  createdAt    DateTime    @default(now())

  @@index([profileId])
}

// ─── 지원 회사/포지션 (여러 개 관리 가능) ───
model TargetPosition {
  id                      String      @id @default(cuid())
  profileId               String
  profile                 UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  company                 String // 지원 회사명
  position                String // 포지션 (e.g., "시니어 백엔드 개발자")
  jobDescription          String? // JD (Job Description) 텍스트
  requirements            String[] // 주요 요구사항
  preferredQualifications String[]    @default([]) // 우대사항
  requiredExperience      String? // 필요 경력 (예: "3년 이상")
  notes                   String? // 메모
  isActive                Boolean     @default(true) // 활성 여부

  // Extended fields for job posting details
  salaryRange    String? // 연봉 범위 (e.g., "5,000~7,000만원", "협의")
  location       String? // 근무 지역 (e.g., "서울 강남구", "판교")
  employmentType String? // 고용 형태 ("정규직", "계약직", "인턴")
  deadline       String? // 지원 마감일 (e.g., "2026-03-15", "상시채용")
  benefits       String[]  @default([]) // 복리후생 (["스톡옵션", "유연근무", "식대 지원"])
  companySize    String? // 회사 규모 (e.g., "스타트업 (10-50명)", "대기업")
  sourceUrl      String? // 파싱 원본 URL
  sourceSite     String? // 출처 사이트 ("saramin", "wanted", etc.)
  lastFetched    DateTime? // 마지막 파싱 시간
  techStack      String[]  @default([]) // 기술 스택

  sessions           InterviewSession[] // 이 포지션으로 진행한 면접들
  generatedQuestions GeneratedQuestion[] // AI 생성 예상 질문
  resumeEdits        ResumeEdit[] // 이력서 첨삭 결과
  resumeDocuments    ResumeDocument[] // 생성된 이력서 문서
  portfolioGuides    PortfolioGuide[] // 포트폴리오 가이드
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt

  @@index([profileId])
}

// ─── AI 생성 예상 면접 질문 ───
model GeneratedQuestion {
  id               String         @id @default(cuid())
  targetPositionId String
  targetPosition   TargetPosition @relation(fields: [targetPositionId], references: [id], onDelete: Cascade)
  content          String // 질문 내용
  category         String // 질문 카테고리 (기술심화, 프로젝트경험, 시스템설계, 인성문화핏, 직무적합성)
  reasoning        String? // AI가 이 질문을 생성한 이유
  orderIndex       Int // 표시 순서
  createdAt        DateTime       @default(now())

  @@index([targetPositionId])
}

// ─── 면접 세션 ───
model InterviewSession {
  id               String          @id @default(cuid())
  userId           String? // 세션 소유자 (nullable during migration)
  user             User?           @relation(fields: [userId], references: [id])
  targetPositionId String? // 지원 포지션 연결 (선택)
  targetPosition   TargetPosition? @relation(fields: [targetPositionId], references: [id])
  topics           String[] // 선택한 주제들
  difficulty       String // junior / mid / senior
  evaluationMode   String // immediate / after_complete
  interviewType    String   @default("technical") // "technical" | "behavioral" | "mixed"
  companyStyle     String? // Company interview style ID (e.g., "naver", "coupang", "startup")
  techKnowledgeEnabled Boolean @default(false) // Whether tech knowledge base was used for this session
  jobFunction      String  @default("developer") // 직무 구분 (developer, pm, designer, etc.)
  status           String // in_progress / completed / abandoned
  questionCount    Int             @default(0) // 총 질문 수 (캐싱 용도)
  endReason        String? // user_ended / all_topics_covered / error / timeout
  totalScore       Float? // 세션 평균 점수
  summary          String? // AI 생성 세션 요약
  userRating           Int?      // 세션 종료 후 만족도 (1-5)
  mostHelpfulQuestionId String?  // 가장 도움된 질문 ID
  sessionDurationSec   Int?      // 총 세션 시간 (초)
  startedAt        DateTime        @default(now())
  completedAt      DateTime?
  deletedAt        DateTime? // Soft Delete
  resumeEditId     String?
  resumeEdit       ResumeEdit? @relation(fields: [resumeEditId], references: [id], onDelete: SetNull)
  questions        Question[]
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@index([jobFunction])
  @@index([startedAt])
  @@index([targetPositionId, startedAt])
  @@index([userId, startedAt])
  @@index([userId, createdAt])
  @@index([userId, status, completedAt])
  @@index([resumeEditId])
}

// ─── 면접 질문 ───
model Question {
  id         String           @id @default(cuid())
  sessionId  String
  session    InterviewSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  orderIndex Int // 질문 순서
  content    String // 질문 내용
  category   String // 주제 카테고리
  difficulty String // 난이도
  status     String           @default("pending") // pending / answered / skipped
  isFollowUp Boolean          @default(false) // 꼬리질문 여부
  userAnswer String? // 사용자 답변
  evaluation Evaluation?
  followUps  FollowUp[] // 꼬리질문들
  answeredAt DateTime?
  createdAt  DateTime         @default(now())

  @@unique([sessionId, orderIndex])
  @@index([sessionId, status])
  @@index([sessionId, isFollowUp])
}

// ─── 평가 ───
model Evaluation {
  id          String   @id @default(cuid())
  questionId  String   @unique
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  score       Int // 1-10 점수
  feedback    String // AI 피드백
  modelAnswer String // 모범 답안
  strengths   String[] // 강점
  weaknesses  String[] // 약점
  evaluatedAt DateTime @default(now())
  createdAt   DateTime @default(now())
}

// ─── 꼬리질문 ───
model FollowUp {
  id         String   @id @default(cuid())
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  content    String // 꼬리질문 내용
  userAnswer String? // 사용자 답변
  aiFeedback String? // AI 피드백
  orderIndex Int
  createdAt  DateTime @default(now())
}

// ─── 면접 주제 설정 ───
model TopicConfig {
  id          String   @id @default(cuid())
  name        String // 주제명 (e.g., "Java Concurrency")
  category    String // 카테고리 (e.g., "Java")
  isPreset    Boolean  @default(false) // 프리셋 여부
  isActive    Boolean  @default(true)
  description String?
  createdAt   DateTime @default(now())
}

// ─── 앱 설정 ───
model AppConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

// ─── 로그인 시도 기록 (Rate Limiting 영속화) ───
model LoginAttempt {
  id        String   @id @default(cuid())
  ip        String // 요청 IP 주소
  success   Boolean // 성공 여부
  userId    String? // 로그인 성공 시 사용자 ID
  createdAt DateTime @default(now())

  @@index([ip, createdAt])
}

// ─── AI 토큰 사용량 로그 ───
model AIUsageLog {
  id     String  @id @default(cuid())
  userId String? // User ID (nullable, Phase 3에서 required로 변경)
  user   User?   @relation(fields: [userId], references: [id])

  // 요청 컨텍스트
  sessionId String? // 면접 세션 ID (nullable)
  endpoint  String // "stream" | "evaluate" | "evaluate_batch"
  model     String // 사용된 AI 모델명

  // 토큰 사용량
  promptTokens     Int // 입력 토큰 수
  completionTokens Int // 출력 토큰 수
  totalTokens      Int // 합계
  estimated        Boolean @default(false) // 추정치 여부

  // 요청 메타데이터
  durationMs   Int? // 응답 소요 시간 (ms)
  success      Boolean @default(true) // 성공 여부
  errorMessage String? // 에러 발생 시 메시지
  cost         Float? // 예상 비용 (USD)
  tier         String? // 사용자 구독 등급

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([sessionId])
  @@index([createdAt])
  @@index([endpoint, createdAt])
  @@index([model, createdAt])
}

// ─── 구독 (결제) ───
model Subscription {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  provider   PaymentProvider @default(STRIPE)
  externalId String // Stripe subscription ID
  customerId String // Stripe customer ID

  status       SubscriptionStatus @default(TRIALING)
  tier         SubscriptionTier
  billingCycle BillingCycle       @default(MONTHLY)

  amount   Int // 원 단위 (KRW)
  currency String @default("KRW")

  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  trialEnd           DateTime?
  canceledAt         DateTime?
  cancelReason       String?

  payments Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([externalId])
  @@index([status])
}

// ─── 결제 기록 ───
model Payment {
  id             String       @id @default(cuid())
  subscriptionId String
  subscription   Subscription @relation(fields: [subscriptionId], references: [id])

  provider   PaymentProvider
  externalId String // Stripe payment intent ID
  amount     Int
  currency   String
  status     PaymentStatus

  taxAmount      Int?
  description    String?
  receiptUrl     String?
  failureReason  String?
  refundedAmount Int?
  refundedAt     DateTime?

  createdAt DateTime @default(now())

  @@index([subscriptionId])
  @@index([externalId])
  @@index([status, createdAt])
  @@index([createdAt])
}

// ─── Webhook 이벤트 (멱등성) ───
model WebhookEvent {
  id          String          @id @default(cuid())
  provider    PaymentProvider
  eventType   String
  externalId  String          @unique // 이벤트 ID (멱등성 보장)
  payload     Json
  processed   Boolean         @default(false)
  processedAt DateTime?
  error       String?
  retryCount  Int             @default(0)

  createdAt DateTime @default(now())

  @@index([processed, createdAt])
}

// ─── 감사 로그 ───
model AuditLog {
  id         String   @id @default(cuid())
  userId     String
  action     String // e.g., "subscription.created", "payment.refunded", "user.login"
  resource   String // e.g., "subscription", "payment", "user"
  resourceId String? // ID of the affected resource
  details    Json? // Additional context
  ip         String? // Request IP
  createdAt  DateTime @default(now())

  @@index([userId, createdAt])
  @@index([action, createdAt])
  @@index([resource, resourceId])
}

// ─── 베타 피드백 ───
model BetaFeedback {
  id        String  @id @default(cuid())
  userId    String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  category  String // "bug", "feature", "ux", "performance", "general"
  content   String
  rating    Int? // 1-5
  page      String? // URL where feedback was given
  userAgent String?

  // 관리자 워크플로우
  status     String? // "open" | "in_progress" | "resolved" | "dismissed"
  adminNote  String? // 관리자 메모
  resolvedAt DateTime? // 해결 시간
  resolvedBy String? // 해결한 관리자 ID (no FK, audit trail only)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([category])
  @@index([createdAt])
  @@index([status])
}

// ─── 공지사항 ───
enum AnnouncementTarget {
  ALL
  FREE
  PRO
}

enum AnnouncementDisplayType {
  BANNER
  POPUP
}

model Announcement {
  id          String                  @id @default(cuid())
  title       String
  content     String
  target      AnnouncementTarget      @default(ALL)
  displayType AnnouncementDisplayType @default(BANNER)
  startsAt    DateTime                @default(now())
  endsAt      DateTime? // null = 무기한
  createdBy   String // 생성한 관리자 ID
  deletedAt   DateTime? // Soft delete
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt

  @@index([deletedAt, startsAt, endsAt])
  @@index([target])
}

// ─── 이력서 편집/코칭 결과 ───
model ResumeEdit {
  id               String          @id @default(cuid())
  profileId        String
  profile          UserProfile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  targetPositionId String?
  targetPosition   TargetPosition? @relation(fields: [targetPositionId], references: [id], onDelete: SetNull)
  mode             String // "general" | "targeted"
  sections         Json // SectionFeedback[]
  overallScore     Int? // 1-10
  overallFeedback  String?
  keywordMatch     Json? // targeted 모드: { matched[], missing[], coverage, suggestions[] }
  version          Int             @default(1)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  interviewSessions InterviewSession[]
  resumeDocuments   ResumeDocument[]

  @@index([profileId])
  @@index([profileId, targetPositionId])
  @@index([targetPositionId])
}

// ─── 생성된 이력서 문서 ───
model ResumeDocument {
  id               String          @id @default(cuid())
  profileId        String
  profile          UserProfile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  targetPositionId String?
  targetPosition   TargetPosition? @relation(fields: [targetPositionId], references: [id], onDelete: SetNull)
  resumeEditId     String?
  resumeEdit       ResumeEdit?     @relation(fields: [resumeEditId], references: [id], onDelete: SetNull)

  // 생성 옵션
  template         String          // "clean-modern" | "professional" | "executive"
  sourceType       String          // "profile" (원본) | "coaching" (AI 개선본)
  language         String          @default("ko") // "ko" | "en"

  // JD 맞춤화 메타데이터
  appliedKeywords  String[]        @default([])
  reorderedCareers Json?

  // 이력서 컨텐츠 (스냅샷)
  content          Json

  // 문서 상태
  status           String          @default("generated") // "generating" | "generated" | "failed"

  createdAt        DateTime        @default(now())

  @@index([profileId])
  @@index([targetPositionId])
  @@index([profileId, createdAt])
}

// ─── 포트폴리오 프로젝트 ───
model PortfolioProject {
  id              String      @id @default(cuid())
  profileId       String
  profile         UserProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  title           String
  description     String
  role            String
  teamSize        Int?
  startDate       String      // YYYY-MM
  endDate         String?
  techStack       String[]
  achievements    String[]
  troubleshooting String?
  githubUrl       String?
  demoUrl         String?
  category        String      @default("personal") // personal | work | opensource | hackathon
  orderIndex      Int         @default(0)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([profileId])
}

// ─── 포트폴리오 가이드 ───
model PortfolioGuide {
  id                String          @id @default(cuid())
  profileId         String
  profile           UserProfile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  targetPositionId  String?
  targetPosition    TargetPosition? @relation(fields: [targetPositionId], references: [id], onDelete: SetNull)
  strategy          Json
  overallScore      Int?
  overallFeedback   String?
  version           Int             @default(1)
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([profileId])
  @@index([profileId, targetPositionId])
  @@index([targetPositionId])
}
